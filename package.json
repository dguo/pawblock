{
  "name": "pawblock",
  "version": "0.1.0",
  "description": "Development environment for PawBlock",
  "main": "N/A",
  "scripts": {
    "build": "node build.js",
    "format": "prettier --write '**/*.js'",
    "format:check": "prettier --list-different '**/*.js'",
    "lint": "eslint '**/*.js'",
    "release": "yarn install && yarn format:check && yarn lint && yarn build && web-ext lint && web-ext build --overwrite-dest",
    "start": "yarn install && yarn build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dguo/pawblock.git"
  },
  "author": "Danny Guo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dguo/pawblock/issues"
  },
  "homepage": "https://dannyguo.com/pawblock",
  "dependencies": {
    "bulma": "^0.4.3",
    "font-awesome": "^4.7.0"
  },
  "devDependencies": {
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^24.9.0",
    "prettier": "^2.8.1",
    "web-ext": "^3.1.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "browser": false
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "no-console": "off"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
